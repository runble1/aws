{
  "containerDefinitions": [
    {
      "name": "{{ env `SERVICE_NAME`}}-container",
      "cpu": 256,
      "memory": 640,
      "essential": true,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget -q -O - http://localhost:3000/api/healthcheck || exit 1"
        ],
        "interval": 5,
        "retries": 3,
        "startPeriod": 60,
        "timeout": 5
      },
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "image": "{{ env `APP_IMAGE_URL` `` }}",
      "logConfiguration": {
        "logDriver": "awsfirelens"
      },
      "portMappings": [
        {
          "appProtocol": "",
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ]
    },
    {
      "name": "log-router",
      "essential": true,
      "image":  "{{ env `FIRELENS_IMAGE_URL` ``}}",
      "cpu": 128,
      "memory": 256,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/firelens-logs",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "firelens"
        }
      },
      "firelensConfiguration": {
        "type": "fluentbit",
        "options": {
          "enable-ecs-log-metadata": "false",
          "config-file-type": "file",
          "config-file-value": "/fluent-bit/etc/extra.conf"
        }
      },
      "healthCheck": {
        "retries": 2,
        "command": [
          "CMD-SHELL",
          "curl -f http://127.0.0.1:2020/api/v1/uptime || exit 1"
        ]
      }
    }
  ],
  "cpu": "512",
  "memory": "1024",
  "taskRoleArn": "{{ or (env `TASK_ROLE_ARN` ``) (tfstate `module.ecs.aws_iam_role.ecs_task_role.arn`) }}",
  "executionRoleArn": "{{ or (env `EXECUTION_ROLE_ARN` ``) (tfstate `module.ecs.aws_iam_role.ecs_task_execution_role.arn`) }}",
  "family": "{{ env `SERVICE_NAME`}}-task-definition",
  "ipcMode": "",
  "networkMode": "awsvpc",
  "pidMode": "",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  },
  "tags": [
    {
      "key": "Env",
      "value": "dev"
    },
    {
      "key": "System",
      "value": "nextjs"
    }
  ]
}
